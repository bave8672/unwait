# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true
quote_type = single

[{COMMIT_EDITMSG,*.diff,*.md,*.patch}]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 72
